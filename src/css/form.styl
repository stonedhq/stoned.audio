form
  display: table
  width: 100%

  input, button
    height: 60px
    border-radius: 30px
    font-size: 16px
    font-weight: bold
    padding: 0 15px
    background-color: transparent
    border: 4px solid #FFF
    color: #FFF
    outline: 0

  input
    &:-moz-placeholder
      color: #FFF

    &::-moz-placeholder
      color: #FFF

    &:-ms-input-placeholder
      color: #FFF

    &::-webkit-input-placeholder
      color: #FFF

