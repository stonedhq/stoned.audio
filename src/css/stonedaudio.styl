.progress
  margin-top: calc(-20vh - 40px)
  margin-bottom: 20vh
  z-index: 10

  .bar
    background-color: rgba(51,51,51,.9)
    height: 40px
    transition: top .1s linear
    top: 0

    &:before
      // background: radial-gradient(at top left, rgba(242, 36, 105,.50), rgba(242,36,105,0))
      // background-color: #F170CD
      // background-color: #F170A7
      background: radial-gradient(at top left, rgba(0, 212, 255,.50), rgba(0,212,255,0))
      background-color: #3DF2B6
      text-align: right
      font-size: 0.8rem
      font-weight: bold
      line-height: 3.2em
      padding-right: 20px

    &:after
      content: ''
      background-color: #3DF2B6
      // background-color: #F170CD
      // background-color: #F170A7
      position: absolute
      margin-left: -13px
      width: 28px
      height: 28px
      top: 6px
      transform: rotate(45deg)

.emphasis
  // color: rgb(242, 36, 105)

.content
  max-width: 700px

.press-strip
  margin-top: -20vh
  height: 20vh
  background-color: rgba(51,51,51,.4)
  display: block

  .content
    padding: 0
    margin: 0 auto

    img
      column 1/4 4 60px
      height: 20px
      margin-top: 10vh
      transform: translateY(-50%)

section
  h1
  h2
  p
    text-align: center

  p
    font-size: .9em
    line-height: 2em

#nowires
  h1
    color: rgba(0,0,0,.9)

  h2
    top: 13vh
    transform: translateY(-50%)
    position: absolute
    width: 100%
    letter-spacing: .2em
    font-weight: 400
    color: rgba(51,51,51,.9)

  .content
    margin-top: 33vh
    transform: translateY(-50%)
    color: rgba(51,51,51,.9)

.list
  .info
    p
      font-size: 1.25em
      line-height: 1.6em

    ul
      margin-top: 50px

      li
        column 1/4 4 20px

        & > *
          display: block

          &:first-child
            width: 60px
            height: 60px
            border-radius: 30px
            border: 3px solid #FFF
            margin: 0 auto 10px auto
            text-align: center

            img
              display: inline-block
              padding: 12px
              width: 100%
              height: 100%

          &:last-child
            text-align: center
            font-size: .75em
            line-height: 2em
            font-family: 'Lato', sans-serif
            font-weight: bold

#comfy
#ditch
